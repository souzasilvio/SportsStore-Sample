<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />    
    <link rel="stylesheet" asp-href-include="/css/bootstrap.css" />
    <link rel="stylesheet" asp-href-include="/css/bootstrap-theme.css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.9/css/all.css" integrity="sha384-5SOiIsAziJl6AWe0HWRKTXlfcSHKmYV4RBF18PPJ173Kzn7jzMyFuTtk8JA7QQG1" crossorigin="anonymous">
    <title>SportsStore</title>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Product" asp-action="List" class="navbar-brand">Sports Store</a>
            </div>
            @await Component.InvokeAsync("NavigationMenu")
        </div>
    </nav>
    <div class="col-md-3" style="padding-top:60px;">
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2018 - Sports Store Ltda</p>
            </footer>
        </div>
        </div>
        <script src="~/script/jquery.js"></script>
        @RenderSection("Scripts", required: false)
</body>
</html>